<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_beylekiler_add_reklama_sahypa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextAppearance="@android:style/TextAppearance.Medium"
        app:titleTextColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="3dp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:id="@+id/layout_beylekiler_add_reklama_kategoriya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_kategoriya_title_add_reklama_beylekiler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategoriýa"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/text_kategpriya_edit_add_reklama_beylekiler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/colorPrimary"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="Saýlanylmadyk"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:textSize="23dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_ady_add_reklama_beylekiler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Ady"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/edittext_ady_add_reklama_beylekiler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/colorPrimary"
                    android:focusableInTouchMode="true"
                    android:gravity="bottom"
                    android:hint="Bildirişiň gysgaça adyny ýazyň"
                    android:inputType="text"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:textSize="23dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_bahasy_add_reklama_beylekiler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Bahasy"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edittext_bahasy_add_reklama_beylekiler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableTint="@color/colorPrimary"
                        android:focusableInTouchMode="true"
                        android:gravity="bottom"
                        android:hint="Bahasyny manatda giriziň"
                        android:inputType="numberDecimal"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textSize="23dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="TMT"
                        android:textColor="@android:color/black"
                        android:textSize="23dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_dusundirisi_add_reklama_beylekiler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Düşündirişi"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/edittext_dusundirisi_add_reklama_beylekiler"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/colorPrimary"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="Bildirişiň barada giňişleýin maglumat"
                    android:maxLines="50"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:textSize="23dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_beylekiler_add_reklama_yeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_yeri_title_add_reklama_beylekiler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Ýeri"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />

                <EditText
                    android:id="@+id/text_yeri_edit_add_reklama_beylekiler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableTint="@color/colorPrimary"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="Saýlanylmadyk"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:textSize="23dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/beylekiler_image_add"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/stroke_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:src="@android:drawable/ic_menu_camera" />

                    <TextView
                        android:id="@+id/surat_gos_add_reklama_beylekiler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surat Goş"
                        android:textColor="@android:color/black"
                        android:textSize="23dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/stroke_gray"
                    android:orientation="horizontal"
                    android:weightSum="99">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycle_beylekiler_surat_gos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></android.support.v7.widget.RecyclerView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/telefon_add_reklama_beylekiler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Telefon Belgiňiz"
                            android:textColor="@android:color/black"
                            android:textSize="25dp" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="+993"
                            android:textColor="@android:color/black"
                            android:textSize="25dp" />

                        <EditText
                            android:id="@+id/edittext_nomeri_add_reklama_beylekiler"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/colorPrimary"
                            android:drawableTint="@color/colorPrimary"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:hint="xxxxxxxx"
                            android:inputType="numberDecimal"
                            android:maxLength="8"
                            android:maxLines="1"
                            android:textCursorDrawable="@color/colorPrimary"
                            android:textSize="25dp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/beylekiler_add_add"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/button_radius"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="SMS UGRAt"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>