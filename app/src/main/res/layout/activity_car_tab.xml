<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.prohe.bb.car_tab">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_car_sahypa"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:elevation="1dp"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextAppearance="@android:style/TextAppearance.Small"
        app:titleTextColor="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="3dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"/>

    <android.support.design.widget.TabLayout
        android:background="@color/colorPrimary"
        android:id="@+id/tablayout_car_sahypa"
        android:layout_width="match_parent"
        app:tabTextColor="@android:color/white"
        android:layout_height="40dp"
        android:elevation="1dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@android:color/holo_blue_light"
        app:tabMode="fixed"
        app:tabTextAppearance="?android:attr/textAppearanceSmall" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager_car_sahypa"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>