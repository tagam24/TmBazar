<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cor_layout_vip_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_realtor_show_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapse_realtor_show_details"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_for_viewpager_realtor_show_details"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager_for_realtor_show_details"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentTop="true" />

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/indicator_realtor_show_details"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_realtor_show_details"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:titleTextColor="@android:color/black"
                app:layout_collapseMode="pin"
                app:popupTheme="@color/colorPrimary">


            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/flbut_realtor_show_details"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp"
        app:fabSize="normal"
        android:scaleType="fitCenter"
        android:src="@drawable/like"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/appbar_realtor_show_details"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="12dp" />



    <android.support.v4.widget.NestedScrollView
        android:id="@+id/realtor_show_details_nestedscrolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative_layout_vip_back_realtor_details"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                      >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:weightSum="90">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/maintitle_realtor_show_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Samsung a5 2017"
                                android:textColor="@android:color/black"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/mainprice_far_realtor_show_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2300"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="TMT"
                                android:textColor="@android:color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="30"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:id="@+id/mainplace_for_realtor_show_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aşgabat"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/maindata_for_realtor_show_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="23.05.2018"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:src="@drawable/watch_black" />

                            <TextView
                                android:id="@+id/mainwatch_for_realtor_show_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="342"
                                android:textSize="14dp" />


                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/vip_satyldy_gyssagly_icon_realtor_shiow_details"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:visibility="invisible"
                        android:src="@drawable/icon_satyldy" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:src="@drawable/arrow_show" />

                        <TextView
                            android:id="@+id/information_name_in_realtor_show_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giňişleýin maglumat"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|left">

                                <TextView
                                    android:id="@+id/yeri_show_detail_realtor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ýeri"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="16dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|left">

                                <TextView
                                    android:id="@+id/bahasy_show_detail_realtor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bahasy"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="16dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|left">

                                <TextView
                                    android:id="@+id/nomeri_show_detail_realtor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nomeri"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="16dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|left">

                                <TextView
                                    android:id="@+id/otag_show_detail_realtor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Otagy"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="16dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|left">

                                <TextView
                                    android:id="@+id/text_yeri_show_detail_realtor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Aşgabat"
                                    android:textColor="@android:color/black"
                                    android:textSize="16dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|left"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_bahasy_show_detail_realtor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2300"
                                    android:textColor="@android:color/black"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="TMT"
                                    android:textColor="@android:color/black"
                                    android:textSize="16dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|left">

                                <TextView
                                    android:id="@+id/text_nomeri_show_detail_realtor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+99363163686"
                                    android:textColor="@android:color/black"
                                    android:textSize="16dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical|left">

                                <TextView
                                    android:id="@+id/text_otagy_show_detail_realtor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textColor="@android:color/black"
                                    android:textSize="16dp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/gosmaca_txt_realtor_show_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yagday gaty gowy degim yok lyuboy ussana barladay dine aljaklar jan etsin"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <ViewFlipper
                        android:id="@+id/small_fliper_for_realtor_show_details"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="70dp"
                        android:autoStart="true"
                        android:flipInterval="6000"
                        android:inAnimation="@android:anim/slide_in_left"
                        android:outAnimation="@android:anim/slide_out_right">


                    </ViewFlipper>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/flbut2_realtor_show_details"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/call"
        app:backgroundTint="@color/callcolor"
        app:fabSize="normal"
        app:layout_anchor="@id/realtor_show_details_nestedscrolview"
        app:layout_anchorGravity="bottom|center"
        app:pressedTranslationZ="12dp" />
</android.support.design.widget.CoordinatorLayout>